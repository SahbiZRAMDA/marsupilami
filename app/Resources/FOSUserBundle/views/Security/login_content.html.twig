{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
    {% endif %}
    <div class="input-group">
        <label class="col-xl-4 col-lg-4 col-md-4 col-sm-5 col-form-label"
               for="username">{{ 'security.login.username'|trans }}</label>
        <input class="form-control validate col-xl-9 col-lg-8 col-md-8 col-sm-7" type="text" id="username"
               name="_username" value="{{ last_username }}" required="required" autocomplete="username"/>
    </div>
    <div class="input-group">
        <label class="col-xl-4 col-lg-4 col-md-4 col-sm-5 col-form-label"
               for="password">{{ 'security.login.password'|trans }}</label>
        <input class="form-control validate col-xl-9 col-lg-8 col-md-8 col-sm-7" type="password" id="password"
               name="_password" required="required" autocomplete="current-password"/>
    </div>
    <a class="btn btn-small btn-primary" href="{{ path('fos_user_registration_register') }}">Inscription</a>
    <input class="btn btn-small btn-primary right" type="submit" id="_submit" name="_submit"
           value="{{ 'security.login.submit'|trans }}"/>
</form>
