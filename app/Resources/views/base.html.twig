<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}{% endblock %}
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600">
    <!-- https://fonts.google.com/specimen/Open+Sans -->
    <link rel="stylesheet" href="{{ asset('assets/css/fontawesome.min.css') }}">
    <!-- https://fontawesome.com/ -->
    <link rel="stylesheet" href="{{ asset('assets/css/bootstrap.min.css') }}">
    <!-- https://getbootstrap.com/ -->
    <link rel="stylesheet" href="{{ asset('assets/css/tooplate.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/css/custom.css') }}">
</head>
<body>
<div>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <nav class="navbar navbar-expand-xl navbar-light bg-light">
                    <a class="navbar-brand" href="/">
                        <img src="{{ asset('assets/img/marsupilami.png') }}" class="logo"/>
                        <h1 class="tm-site-title mb-0">{% block banner %}{% endblock %}</h1>
                    </a>
                    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                        <a class="nav-login" href="{{ path('fos_user_security_logout') }}">
                            <i class="far fa-user mr-2 tm-logout-icon"></i>
                            <span>{{ 'layout.logout'|trans({}, 'FOSUserBundle') }}</span>
                        </a>
                    {% endif %}
                </nav>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="row tm-mt-big">
                    {% block body %}{% endblock %}
                </div>
            </div>
        </div>
    </div>
</div>
<script src="{{ asset('assets/js/jquery-3.3.1.min.js') }}"></script>
<script src="{{ asset('assets/js/moment.min.js') }}"></script>
<script src="{{ asset('assets/js/utils.js') }}"></script>
<script src="{{ asset('assets/js/bootstrap.min.js') }}"></script>
<script src="{{ asset('assets/js/tooplate-scripts.js') }}"></script>
{% block javascripts %}{% endblock %}
</body>
</html>
